<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.floatingactionbutton.FloatingActionButton

        android:layout_width="wrap_content"
        android:id="@+id/rfsbtn"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:backgroundTint="@color/blue"
        android:foregroundTint="@color/blue"
        app:backgroundTint="@color/blue"
        app:tint="@color/white"
        android:src="@android:drawable/ic_input_add"
        android:tint="@color/white"

        android:tintMode="src_in"/>

    <RelativeLayout
        android:layout_margin="32dp"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/ic_baseline_menu_24"
        android:backgroundTint="@color/white" />

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="30dp"
        android:text="Finder"
        android:textSize="28dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/white" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="39dp"
        android:text="Présences"
        android:textColor="@color/white"
        android:textSize="25dp" />



    <ScrollView
        android:id="@+id/scrollCo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/apps"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="185dp"
            android:orientation="vertical">




            <TextView
                android:id="@+id/appareilsCo"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:gravity="center_horizontal"

                android:text="Appareils connectés"
                android:textColor="@android:color/white"
                android:textSize="18dp" />



        </LinearLayout>

    </ScrollView>
    <LinearLayout

        android:id="@+id/ajouter"
        android:translationZ="70dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="560dp"
        android:layout_marginTop="220dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/round"
        android:layout_gravity="top">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"

                android:layout_marginBottom="25dp"
                android:layout_height="60dp"

                android:background="@drawable/round"
                android:layout_weight="1"
                android:src="@drawable/ic_sharp_add_24"

                android:backgroundTintMode="src_over"
                android:backgroundTint="@color/btn_inactive"

                />

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="260dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="40dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:layout_height="35dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:background="@color/btn_inactive"
                android:textColor="@color/white"
                android:textColorHint="@color/txt_inactive"
                android:hint="Nom" />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="30dp">

            <ScrollView
                android:id="@+id/scrlAppCo"
                android:layout_width="match_parent"
                android:layout_height="271dp">
                <LinearLayout
                    android:id="@+id/sltAppCo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>

            </ScrollView>

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="60dp"

                android:backgroundTint="@color/blue"
                android:text="Ajouter"
                android:textColor="@color/white" />
        </LinearLayout>



    </LinearLayout>


